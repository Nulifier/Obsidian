{
  "name": "obsidian",
  "version": "0.0.3",
  "description": "A CMS/Blogging engine.",
  "bugs": {
    "url": "https://github.com/Nulifier/Obsidian/issues"
  },
  "main": "index.js",
  "scripts": {
    "test": "mocha --require test/support/env --reporter spec test/",
    "test-ci": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --require test/support/env --reporter spec test/",
    "test-cov": "istanbul cover node_modules/mocha/bin/_mocha -- --require test/support/env --reporter spec test/",
    "lint": "eslint lib/ test/",
    "build": "npm run build:dev",
    "build:dev": "webpack -d --config lib/admin/webpack.config.js",
    "build:watch": "webpack -d --watch --config lib/admin/webpack.config.js",
    "build:prod": "webpack -p --devtool source-map --output-filename \"[name]-[chunkhash].min.js\" --config lib/admin/webpack-prod.config.js",
    "less": "npm run less:dev",
    "less:dev": "lessc lib/admin/src/styles/styles.less > lib/admin/static/styles/styles.css",
    "less:prod": "lessc --clean-css lib/admin/src/styles/styles.less > lib/admin/static/styles/styles.min.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nulifier/Obsidian.git"
  },
  "keywords": [
    "cms",
    "blog",
    "express"
  ],
  "author": "Nulifier",
  "license": "MIT",
  "homepage": "https://github.com/Nulifier/Obsidian#readme",
  "dependencies": {
    "body-parser": "^1.13.2",
    "bookshelf": "^0.8.1",
    "bunyan": "^1.4.0",
    "compression": "^1.5.1",
    "express": "^4.13.1",
    "jade": "^1.11.0",
    "knex": "^0.8.6",
    "lodash": "^3.10.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^2.2.0",
    "babel-core": "5.8.x",
    "babel-loader": "5.3.x",
    "chai": "3.2.x",
    "eslint": "1.3.x",
    "exports-loader": "^0.6.2",
    "imports-loader": "^0.6.4",
    "istanbul": "^0.3.17",
    "less": "^2.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "mocha": "^2.2.5",
    "react": "^0.14.0-beta3",
    "react-dom": "^0.14.0-beta3",
    "react-redux": "2.0.x",
    "react-router": "^1.0.0-beta3",
    "redux": "2.0.x",
    "redux-actions": "^0.8.0",
    "redux-devtools": "2.1.x",
    "redux-promise": "^0.5.0",
    "redux-react-router": "^0.4.0",
    "redux-thunk": "^0.1.0",
    "sinon": "^1.15.4",
    "sinon-chai": "^2.8.0",
    "sqlite3": "^3.0.9",
    "webpack": "^1.10.5",
    "whatwg-fetch": "^0.9.0"
  }
}
